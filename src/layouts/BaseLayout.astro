---
import TopHeader from "../components/TopHeader.astro";

import Footer from "../components/Footer.astro";

const { 
  title = "ProjectDesk", 
  activePage,
  description = "High-quality software projects and source code for students and professionals.",
  image = "/logo.png",
  transparentHeader = false
} = Astro.props;

const siteURL = Astro.site || Astro.url.origin;
const canonicalURL = new URL(Astro.url.pathname, siteURL);
const imageURL = image.startsWith('http') ? image : new URL(image, siteURL).toString();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:url" content={canonicalURL.toString()} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL.toString()} />
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/manifest.webmanifest">
    <link rel="shortcut icon" href="/favicons/favicon.ico">
    <link rel="stylesheet" href="/src/styles/global.css" />
    <style>
      :root {
        --content-width: 900px;
      }

      body {
        line-height: 1.6;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        padding: 0;
        flex: 1;
      }

      h1, h2, h3 {
        line-height: 1.3;
      }

      .markdown :global(h2) {
        margin-top: 32px;
        font-size: 1.4rem;
      }

      .markdown :global(p) {
        margin: 16px 0;
        color: #333;
      }

      .markdown :global(ul) {
        margin: 16px 0 16px 20px;
      }

      .markdown :global(li) {
        margin-bottom: 8px;
      }
    </style>
  </head>
  <body>
    <TopHeader transparent={transparentHeader} />

    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
