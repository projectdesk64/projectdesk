---
const { title = "ProjectDesk" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <style>
      :root {
        --content-width: 900px;
      }

      body {
        line-height: 1.6;
      }

      main {
        padding: 32px 16px;
      }

      h1, h2, h3 {
        line-height: 1.3;
      }

      .markdown :global(h2) {
        margin-top: 32px;
        font-size: 1.4rem;
      }

      .markdown :global(p) {
        margin: 16px 0;
        color: #333;
      }

      .markdown :global(ul) {
        margin: 16px 0 16px 20px;
      }

      .markdown :global(li) {
        margin-bottom: 8px;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 16px;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
